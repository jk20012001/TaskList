{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cocos Effect Checker",
            "type": "shell",
            "command": "@PATH@.vscode\\EffectChecker\\CocosEffectChecker.exe",
            "args": [
				"0",
                "${file}",
                "${workspaceFolder}\\"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                //"reveal": "silent"
                "reveal": "always",
                "echo": true,
                //"focus": false,
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Cocos Effect Checker With Performance",
            "type": "shell",
            "command": "@PATH@.vscode\\EffectChecker\\CocosEffectChecker.exe",
            "args": [
				"1",
                "${file}",
                "${workspaceFolder}\\"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                //"reveal": "silent"
                "reveal": "always",
                "echo": true,
                //"focus": false,
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Cocos Effect Checker -- All Effects",
            "type": "shell",
            "command": "@PATH@.vscode\\EffectChecker\\CocosEffectChecker.exe",
            "args": [
                //"${fileDirname}\\",
				"0",
                "${workspaceFolder}\\editor\\assets\\effects\\",
                "${workspaceFolder}\\"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                //"reveal": "silent"
                "reveal": "always",
                "echo": true,
                //"focus": false,
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        }
		{
            "label": "Cocos Effect Editor",
            "type": "shell",
            "command": "@PATH@.vscode\\ShaderCompilerIDE\\OpenProject.bat",
            "args": [
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
                "echo": false,
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        }
		{
            "label": "Cocos Effect Editor With Rebuild Project",
            "type": "shell",
            "command": "@PATH@.vscode\\ShaderCompilerIDE\\RebuildProject.bat",
            "args": [
				"${workspaceFolder}\\"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "always"
                "echo": false,
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        }
    ]
}