{
    "files.exclude": {
        ".git": true,
        "node_modules": true,
        "**/.vscode/ShaderCompilerIDE": true,
        "**/library": true,
    },
    "search.exclude": {
        ".git": true,
        "node_modules": true,
        ".github": true,
        "bin": true,
        "**/glsl?.ts": true,
    },
    "typescript.preferences.importModuleSpecifier": "relative",
    "typescript.tsdk": "node_modules/typescript/lib",
    "eslint.validate": [
        "javascript",
        "typescript"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
    },
}
